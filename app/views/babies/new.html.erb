<div class="row">
  <div class="span12">
    <div class="well">
      <h1>Making baby</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
    <div class="well">
      <%= form_for @baby, html: { class: 'form-horizontal' } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="control-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "What is your baby's name?" %>
          <%= f.label :gender %>
          <%= f.select(:gender, ['Male','Female']) %>
          <%= f.label :birth, "Birth Date" %>
          <%= f.datetime_select :birth %>
        </div>
        <div class="form-actions">
          <%= f.submit "Add Baby", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>