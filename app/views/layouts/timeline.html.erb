<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= full_title(yield(:title)) %></title>

    <%= stylesheet_link_tag    "timeline", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600|Noto+Serif|Sacramento" rel="stylesheet" type="text/css">

    <%= render 'shared/shim' %>
  </head>
  <body>
    <%= yield %>

    <script type="text/javascript">
      $(document).ready(function(){
        $(".data").click(function(){
          viewData();
        })
        $(".notes").click(function(){
          viewFeed();
        })
      });
      
      function viewData(){
        $(".row .col_6").parent().animate({
          marginLeft: 100-$(this).width()
        }, 500);
      }

      function viewFeed(){
        $(".row .col_6").parent().animate({
          marginLeft: 0
        }, 500);
      }
    </script>
  </body>
</html>
